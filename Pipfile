[[source]]
url = "https://pypi.org/simple"
verify_ssl = true
name = "pypi"

[packages]
flask = "*"
flask-cors = "*"
pymongo = {extras = ["srv"], version = "*"}
gunicorn = "*"
passlib = "*"
pyjwt = "*"

[dev-packages]
pep8 = "*"
autopep8 = "*"
pytest = "*"
pytest-cov = "*"

[requires]
python_version = "3.10"

[scripts]
start = "gunicorn wsgi:app"
dev = "bash -c \"export FLASK_ENV='development' && cd app && flask run\" "
test = "app && pytest ."
coverage = "app && pytest --cov-report term-missing --cov=. "
freeze = "pip freeze > requirements.txt"
